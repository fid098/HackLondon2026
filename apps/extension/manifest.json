{
  "manifest_version": 3,
  "name": "Veryfi",
  "version": "0.1.0",
  "description": "Detect misinformation and deepfakes on social media. Highlight text to analyze with AI.",

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "geolocation"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://www.tiktok.com/*",
        "https://tiktok.com/*",
        "https://web.telegram.org/*",
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://app.zoom.us/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": ["content/index.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Veryfi",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["content/overlay.css"],
      "matches": ["https://*/*"]
    }
  ]
}
